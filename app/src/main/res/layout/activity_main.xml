<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
     >

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_homeImg"
            android:checked="true"
            android:text="@string/project_name"
            android:drawableTop="@drawable/app_aapay"
            style="@style/style_RadioButton"
          />
        <RadioButton
            android:id="@+id/rb_contacts"
            android:checked="true"
            android:text="weixi"
            android:drawableTop="@drawable/app_aligame"

            style="@style/style_RadioButton"/>
        <RadioButton
            android:id="@+id/rb_discovery"
            android:checked="true"
            android:text="weixi"
            android:drawableTop="@drawable/app_appcenter"

            style="@style/style_RadioButton"/>
        <RadioButton
            android:id="@+id/rb_me"
            android:checked="true"
            android:text="333"
            android:drawableTop="@drawable/app_assign"

            style="@style/style_RadioButton"/>

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/FrameViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioGroup" >
    </android.support.v4.view.ViewPager>
</RelativeLayout>
